<div class="container">
  <div class="row">

    <div class="question col-md-8">
      <h1>Ask Questions</h1>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-dark' %>
          <%= button_tag "Reset", type: :reset, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>

    <div class="question_list col-md-12">
      <h1>All Question</h1>
      <% @questions.each do |question|%>
        <%= link_to question_path(question) do %>
          <h3><%= question.title %></h3>
        <% end %>
        <p><%= question.content %></p>
        Asked <%= time_ago_in_words(question.created_at) %> ago
        <hr>
        <% if @question.is_favorited?(current_user) %>
          <%= link_to 'Unfavorite', unfavorite_question_path(@question), method: :post, class: "btn btn-sm btn-info" %>
        <% else %>
          <%= link_to 'Favorite', favorite_question_path(@question), method: :post, class: "btn btn-sm btn-primary" %>
        <% end %>

      <% end %>

    </div>
    <div class="mx-auto">
      <%= paginate @questions, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</div>
